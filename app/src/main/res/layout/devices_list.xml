<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/typeIV"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        app:srcCompat="@drawable/ic_print_black_24dp" />

    <LinearLayout
        android:id="@+id/infoLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="5dp"
        android:layout_toStartOf="@id/selectButton"
        android:layout_toLeftOf="@id/selectButton"
        android:layout_toEndOf="@id/typeIV"
        android:layout_toRightOf="@id/typeIV"
        android:orientation="vertical">

        <TextView
            android:id="@+id/deviceNameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GoDEX"
            android:textColor="@color/black"
            android:textSize="18sp"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/deviceAddressTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="G@:ED:$$:f"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>

    <Button
        android:id="@+id/selectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:background="@drawable/connect_background"
        android:text="Select"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp" />

</RelativeLayout>